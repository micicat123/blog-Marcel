<p id="notice"><%= notice %></p>

<h1>Posta</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posta.each do |postum| %>
      <tr>
        <td><%= postum.title %></td>
        <td><%= postum.body %></td>
        <td><%= link_to 'Show', postum %></td>
        <td><%= link_to 'Edit', edit_postum_path(postum) %></td>
        <td><%= link_to 'Destroy', postum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Postum', new_postum_path %>
